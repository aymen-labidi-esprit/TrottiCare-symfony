<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Trotticare Events{% endblock %}</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('css/animations.css') }}" rel="stylesheet">
    {% block css %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

<header>
    <nav class="navbar navbar-expand-lg navbar-light sticky-top">
        <div class="container">
            {% set currentRoute = app.request.attributes.get('_route') %}
            {% set isAdmin = currentRoute is defined and currentRoute starts with 'admin_' %}
            {% set brandRoute = isAdmin ? 'admin_dashboard' : 'app_home' %}

            <a class="navbar-brand" href="{{ path(brandRoute) }}">
                <i class="fas fa-bicycle me-2"></i>Trotticare Events
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    {% if isAdmin %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_dashboard') }}">
                                <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_reclamations') }}">
                                <i class="fas fa-bullhorn me-1"></i>Réclamations
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('reclamation_list') }}">
                                <i class="fas fa-list me-1"></i>Mes réclamations
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('create_reclamation') }}">
                                <i class="fas fa-plus me-1"></i>Nouvelle réclamation
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-calendar-alt me-1"></i>Events
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-info-circle me-1"></i>About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="fas fa-envelope me-1"></i>Contact
                            </a>
                        </li>
                    {% endif %}
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-outline-primary btn-sm mt-1 mt-lg-0" href="#">
                            <i class="fas fa-sign-in-alt me-1"></i>Login
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-primary btn-sm mt-1 mt-lg-0" href="#">
                            <i class="fas fa-user-plus me-1"></i>Sign Up
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

{% block content %}{% endblock %}

<footer class="footer py-3 bg-light mt-auto">
    <div class="container text-center">
        <span class="text-muted">© 2024 Trotticare. All rights reserved.</span>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('js/main.js') }}"></script>
<script src="{{ asset('js/animations.js') }}"></script>
{% block js %}{% endblock %}

</body>
</html>