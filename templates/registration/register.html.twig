{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription - TrottiCare{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="h3 mb-3 fw-normal text-center">Inscription</h1>

            {# Render potential form errors not specific to a field #}
            {{ form_errors(registrationForm) }}

            {# Start the form #}
            {{ form_start(registrationForm) }}

            {# Render each form field individually or use form_widget(registrationForm) #}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.telephone) }}
            {{ form_row(registrationForm.plainPassword.first) }}
            {{ form_row(registrationForm.plainPassword.second) }}
            {# Add other fields if present in your RegistrationFormType (like agreeTerms checkbox) #}
            {# {{ form_row(registrationForm.agreeTerms) }} #}


            <button type="submit" class="btn btn-primary w-100 mt-3">S'inscrire</button>

            {# End the form #}
            {{ form_end(registrationForm) }}

            <p class="mt-3 text-center">
                Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a> {# Assuming 'app_login' is your login route #}
            </p>
        </div>
    </div>
{% endblock %}