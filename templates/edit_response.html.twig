{% extends 'base.html.twig' %}

{% block title %}Modifier la Réponse{% endblock %}

{% block content %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-warning text-dark">
                        <h4 class="mb-0">Modifier la réponse</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                            <div class="mb-3">
                                {{ form_label(form.message) }}
                                {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.message) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.user_type) }}
                                {{ form_widget(form.user_type, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.user_type) }}
                            </div>

                            {# ✅ Seulement ce bouton ici, aucun "Envoyer" #}
                            <button type="submit" class="btn btn-success">Modifier la réponse</button>
                            <a href="{{ path('view_responses', {'id': response.reclamation.id}) }}" class="btn btn-outline-secondary ms-2">
                                Annuler
                            </a>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
