{% extends 'base.html.twig' %}

{% block title %}Modifier la Réclamation{% endblock %}

{% block content %}
    <div class="container py-5">
        <h1 class="mb-4">Modifier la Réclamation : <span class="text-primary">{{ reclamation.titre }}</span></h1>
        <div class="card shadow">
            <div class="card-body">
                {{ form_start(form) }}

                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(form.titre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.user_email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(form.description, { 'attr': {'class': 'form-control', 'rows': 5} }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.type_reclamation, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.id_trottinette, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>



                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}